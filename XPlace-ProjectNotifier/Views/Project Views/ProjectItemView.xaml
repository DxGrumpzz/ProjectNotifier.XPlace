<UserControl x:Class="XPlace_ProjectNotifier.ProjectItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XPlace_ProjectNotifier"
             
			 mc:Ignorable="d" 
			 
             d:DesignHeight="100" 
			 d:DesignWidth="400"
				
			 d:DataContext="{x:Static local:ProjectItemViewModel.DesignTimeInstance}">

	<StackPanel Background="White">

		<!-- The project title -->
		<TextBlock Text="{Binding ProjectModel.Title}"
				   TextWrapping="Wrap"/>

		<!-- The project description-->
		<TextBlock Text="{Binding ProjectModel.Description}" 
				   TextWrapping="Wrap"
				   />



		<!--The project's publishing date-->
		<TextBlock Text="{Binding ProjectModel.PublishingDate}"
				   TextWrapping="Wrap" />

		<!-- Project link-->
		<!--<TextBlock 
				   TextWrapping="Wrap">
			
			<Hyperlink NavigateUri="{Binding ProjectModel.Link}"/>

		</TextBlock>-->

		<!-- Project link-->
		<TextBlock>           

			<Hyperlink NavigateUri="{Binding ProjectModel.Link}"
					   
					   Command="{Binding OpenProjectUrlCommand}">
			
				<TextBlock Text="{Binding ProjectModel.Link}"/>
			</Hyperlink>
		</TextBlock>

	</StackPanel>
</UserControl>