<Window x:Class="XPlace_ProjectNotifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XPlace_ProjectNotifier"
        mc:Ignorable="d"
		
        Title="{Binding Model.Title}" 
		
		Height="450"
		Width="900">

	<d:Window.DataContext>
		<local:MainWindowViewModel/>
	</d:Window.DataContext>
	
	<Grid>

		<!-- Loading text, Displayed before project list is loaded-->
		<TextBlock Text=". . . טוען" 
				   FontSize="30"
				   FontFamily="Open Sans Hebrew"
				   FontWeight="Bold"
				   
				   HorizontalAlignment="Center"
				   VerticalAlignment="Center"
				   
				   Visibility="{Binding IsLoading, 
				   Converter={local:BoolToVisibilityValueConverter}}"
				   />

		<local:ProjectListView DataContext="{Binding ProjectList}"/>

	</Grid>
</Window>