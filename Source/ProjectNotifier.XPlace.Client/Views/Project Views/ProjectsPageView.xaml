<local:BaseView x:Class="ProjectNotifier.XPlace.Client.ProjectsPageView"
                x:TypeArguments="local:ProjectsPageViewModel"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:ProjectNotifier.XPlace.Client"
                
			    mc:Ignorable="d" 
			    
                d:DesignHeight="450" 
			    d:DesignWidth="800">

    <Grid ClipToBounds="True">

        <!-- Settings display button -->
        <Button Content="הגדרות" 
				
				VerticalAlignment="Top"
				HorizontalAlignment="Center"
				
				Margin="0,-30,0,0"
				
                Panel.ZIndex="1"
                
				Style="{StaticResource SettingsButtonStyle}"
				
				Command="{Binding OpenSettingsCommand}"/>

        
        <local:ProjectListView DataContext="{Binding ProjectList}"/>


        <!-- Settings view -->
        <local:SettingsView DataContext="{Binding SettingsViewModel}"/>

    </Grid>
</local:BaseView>